{% extends 'home.html.twig' %}

{% block title %} View Category {% endblock %}

{% block content %}
    <div class="card text-dark bg-light mb-3">
        <div class="card-header d-flex justify-content-between">
            <h3>Categories</h3>
            <a class="btn btn-primary" href="{{ path('create_category') }}" role="button">+ New</a>
        </div>
        <div class="card-body mt-2">
            <ul class="list-group">
                {% for category in categories %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ category.getName }}
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a class="btn btn-primary" href="{{ path('update_category', {category: category.getId}) }}" role="button">Edit</a>
                            <a class="btn btn-danger" href="{{ path('delete_category', {category: category.getId}) }}" role="button">Delete</a>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}